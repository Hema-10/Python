def get_middle_three(string):
    length = len(string)
    if length < 3:
        return "String is too short"
    else:
        middle_index = length // 2
        return string[middle_index - 1:middle_index + 2]

input_string = input("Enter a string: ")
result = get_middle_three(input_string)
print("Result:", result)
